  <%= f.label :image %>
  <%= f.file_field :image %><br>
  <%= f.label :image, 'or link:' %>
  <%= f.text_field :remote_image_url %>

  <%= f.label :text %>
  <%= f.text_area :text %>

  <%= f.label :datum %>
  <%= f.text_field :datum %>

  <%= f.label :tags, 'Tagy: OddÄ›luj mezerou!' %>
  <%= f.text_field :tags %>

